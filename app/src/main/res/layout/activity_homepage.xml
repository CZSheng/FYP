<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Home Page"
        android:textSize="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/playgame"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="128dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="128dp"
            android:text="Play Game"
            tools:ignore="MissingConstraints" />


    <ProgressBar

        android:id="@+id/search_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playgame"
        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="128dp"
        android:visibility="gone" />


        <Button
            android:id="@+id/leaderbroad"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playgame"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="128dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="128dp"
            android:onClick="to_leader_board_page"
            android:text="Leaderbroad"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/time_leaderbroad"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leaderbroad"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="128dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="128dp"
            android:onClick="to_time_leader_board_page"
            android:text="Time Leaderbroad"
            tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/view_badges"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_leaderbroad"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="128dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="128dp"
            android:onClick="to_badges_page"
            android:text="Badges"
            tools:ignore="MissingConstraints" />


    <Button
        android:layout_below="@+id/view_badges"
        android:id="@+id/logout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Logout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="128dp"
        tools:ignore="MissingConstraints"
        android:onClick="to_login_page"
        />

    <Button
        android:id="@+id/playgame2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="128dp"
        android:text="Play Game2"
        tools:ignore="MissingConstraints"
        android:onClick="to_game2_page"/>

    <Button
        android:id="@+id/playgame3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playgame2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="128dp"
        android:text="Play Game3"
        tools:ignore="MissingConstraints"
        android:onClick="to_game3_page"/>

    </RelativeLayout>

</ScrollView>