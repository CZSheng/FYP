<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:background="@color/black"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#FFFFF4C3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/Order_in_time_leaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="No."
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/time_leaderboard_user_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/Order_in_time_leaderboard"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/time_leaderboard_user_spend_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_leaderboard_user_full_name"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            android:text="time"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="-33dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/time_leaderboard_user_spend_time"
            android:text="second"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="italic" />


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/game_100"
            android:visibility="invisible"
            android:id="@+id/time_number_img"
            android:layout_marginRight="5dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>